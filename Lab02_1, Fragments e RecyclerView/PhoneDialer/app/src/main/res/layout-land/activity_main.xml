<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#101C5C"
    android:backgroundTint="#000000"
    android:clickable="false"
    android:onClick="delDigit"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextPhone"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="0dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/phone_placeholder"
        android:clickable="false"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="false"
        android:gravity="center|fill_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPhone">


        <Button
            android:id="@+id/Cont1"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="#202020"
            android:backgroundTint="#202020"
            android:backgroundTintMode="screen"
            android:longClickable="true"
            android:onClick="SpeedDial"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Cont2"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="#303030"
            android:backgroundTint="#202020"
            android:backgroundTintMode="screen"
            android:longClickable="true"
            android:onClick="SpeedDial"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cont1" />


        <Button
            android:id="@+id/Cont3"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:background="#202020"
            android:backgroundTint="#202020"
            android:backgroundTintMode="screen"
            android:longClickable="true"
            android:onClick="SpeedDial"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Cont2" />

        <Button
            android:id="@+id/One"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/one"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/Cont1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Two"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/two"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/One"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/Three"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/three"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/Two"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/four"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/four"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/Cont2"
            app:layout_constraintTop_toBottomOf="@+id/One" />


        <Button
            android:id="@+id/five"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/five"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/Two" />

        <Button
            android:id="@+id/six"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/six"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/Three" />

        <Button
            android:id="@+id/seven"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:text="@string/seven"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/Cont3"
            app:layout_constraintTop_toBottomOf="@+id/four" />

        <Button
            android:id="@+id/eight"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/eight"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/five" />


        <Button
            android:id="@+id/nine"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/nine"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/six" />

        <Button
            android:id="@+id/zero"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="addNumber"
            android:padding="10dp"
            android:text="@string/zero"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Three"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dial"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:drawableTop="@drawable/ic_call"
            android:drawablePadding="@dimen/default_gap"
            android:onClick="dial"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/zero" />

        <Button
            android:id="@+id/del"
            style="@android:style/Widget.DeviceDefault.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:width="100dp"
            android:height="50dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#000000"
            android:backgroundTintMode="add"
            android:onClick="delDigit"
            android:padding="10dp"
            android:text="@string/del"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/nine"
            app:layout_constraintTop_toBottomOf="@+id/dial" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>